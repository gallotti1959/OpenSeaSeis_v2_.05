$INPUT
 filename data/t01_pseudo_data_spectrum.cseis

$IMAGE
 filename             images/t03_image_spectrum.png
 temp_dir             data
 width                400  
 height               800  
 trace_spacing        even  
 header               rcv
 title                "Example data image - FX spectrum"
 fontsize             12
 window               0 200
# db                   yes
 color_bar            right  60 
 color_bar_ann        fancy  20 
 scale_type           range
 min_value            0
 max_value            10
 wiggle               none
 vi_type              spline
 pos_fill             no
 neg_fill             no
 show_zero_lines      no
 show_time_lines      yes  
 time_major_inc       100
 time_minor_inc       20
 time_max_decimals    0
 vi_color_map         cold_warm
